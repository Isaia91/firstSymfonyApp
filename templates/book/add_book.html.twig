{% extends 'base.html.twig' %}

{% block title %}Ajouter un book{% endblock %}

{% block body %}

    <div class="container mt-4">
        <h1 class="mb-4">
            {{ action is defined ? ('book.form.title_' ~ action)|trans : 'book.form.title_add'|trans }}
        </h1>

        <div class="row">
            <div class="col-md-4">
                {{ form_start(formulaire_book) }}
                {{ form_widget(formulaire_book) }}

                <button class="btn btn-primary my-3" type="submit">
                    {{ action is defined ? ('book.form.submit_' ~ action)|trans : 'book.form.submit_add'|trans }}
                </button>
                {{ form_end(formulaire_book) }}

            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                {% if baseUrl %}
                    <a href="{{ baseUrl }}" class="btn btn-secondary">{{ 'book.form.back'|trans }}</a>
                {% endif %}
            </div>
        </div>
    </div>


{% endblock %}