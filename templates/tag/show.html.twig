{% extends 'base.html.twig' %}

{% block title %}Tag{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Tag Details</h1>

        <table class="table table-bordered table-striped">
            <tbody>
            <tr>
                <th scope="row">Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th scope="row">Name</th>
                <td>{{ tag.name }}</td>
            </tr>
            </tbody>
        </table>

        <div class="d-flex gap-2 mt-3">
            <a href="{{ path('app_tag_index') }}" class="btn btn-secondary">Retour</a>
            <a href="{{ path('app_tag_edit', {'id': tag.id}) }}" class="btn btn-primary">Modifier</a>
            {{ include('tag/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
