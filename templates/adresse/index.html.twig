{% extends 'base.html.twig' %}

{% block title %}Liste des Adresses{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Liste des Adresses</h1>

        {% if urlToAdd %}
            <a href="{{ urlToAdd }}" class="btn btn-primary my-3">Ajouter</a>
        {% endif %}

        <table class="table table-striped table-hover">
            <thead class="table-dark">
            <tr>
                <th>Numéro</th>
                <th>Rue</th>
                <th>Ville</th>
                <th>Code postal</th>
                <th>Nombre d'employés associés</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for adresse in adresses %}
                <tr>
                    <td>{{ adresse.numeroRue }}</td>
                    <td>{{ adresse.nomRue }}</td>
                    <td>{{ adresse.ville }}</td>
                    <td>{{ adresse.codePostal }}</td>
                    <td>
                        {% if adresse.employes|length > 0 %}
                            {{ adresse.employes|length }}
                        {% else %}
                            <span class="text-muted">Aucun</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('adresse_edit', { id: adresse.id }) }}" class="btn btn-sm btn-outline-primary" title="Modifier">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
                            </svg>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center text-muted">Aucune adresse trouvée.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {% if baseUrl %}
            <a href="{{ baseUrl }}" class="btn btn-primary">Accueil</a>
        {% else %}
            <a href="/employe/" class="btn btn-primary">Voir les employés</a>
        {% endif %}
    </div>
{% endblock %}
