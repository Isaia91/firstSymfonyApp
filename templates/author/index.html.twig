{% extends 'base.html.twig' %}

{% block title %}Liste des Auteurs{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Liste des Auteurs</h1>
        {% if urlToAdd %}
            <a href="{{ urlToAdd }}" class="btn btn-primary my-3">Ajouter</a>
        {% endif %}
        <table class="table table-striped table-hover">
            <thead class="table-dark">
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Date de création</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for auteur in authors %}
                <tr>
                    <td> {{ auteur.nom }} </td>
                    <td> {{ auteur.prenom }}</td>
                    <td>{{ auteur.dateCreation|date('d/m/Y H:i') }}</td>
                    <td>
                        <a href="{{ path('author_edit', { id: auteur.id }) }}" class="btn btn-sm btn-outline-primary" title="Modifier">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
                            </svg>
                        </a>
                    </td>

                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center text-muted">Aucun Auteur trouvé.</td>  <!-- Correction du colspan -->
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% if baseUrl %}
            <a href="{{ baseUrl }}" class="btn btn-primary">Accueil</a>
        {% else %}
            <a href="/author/multipleAuthors" class="btn btn-primary">Auteurs avec plusieurs livres</a>
        {% endif %}
    </div>
{% endblock %}
