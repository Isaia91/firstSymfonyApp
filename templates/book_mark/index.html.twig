{% extends 'base.html.twig' %}

{% block title %}Hello BookMarkController!{% endblock %}

{% block body %}
    <h1>Liste des Bookmarks</h1>
    <table border="1">
        <thead>
        <tr>
            <th>ID</th>
            <th>URL</th>
            <th>Date de création</th>
            <th>Commentaire</th>
        </tr>
        </thead>
        <tbody>
        {% for bookmark in bookmarks %}
            <tr>
                <td>{{ bookmark.id }}</td>
                <td><a href="{{ bookmark.url }}" target="_blank">{{ bookmark.url }}</a></td>
                <td>{{ bookmark.dateCreation|date('d/m/Y H:i') }}</td>
                <td>{{ bookmark.commentaire }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun bookmark trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
