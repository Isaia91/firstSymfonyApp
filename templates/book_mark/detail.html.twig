{% extends 'base.html.twig' %}

{% block title %}Détail du Bookmark{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Détail du Bookmark</h1>

        {% if bookmark %}
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                <tr>
                    <th>Libellé</th>
                    <th>Valeur</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td><strong>URL</strong></td>
                    <td>
                        <a href="{{ bookmark.url }}" target="_blank" class="text-primary">
                            {{ bookmark.url }}
                        </a>
                    </td>
                </tr>
                <tr>
                    <td><strong>Date de création</strong></td>
                    <td>{{ bookmark.dateCreation|date('d/m/Y H:i') }}</td>
                </tr>
                <tr>
                    <td><strong>Commentaire</strong></td>
                    <td>{{ bookmark.commentaire }}</td>
                </tr>
                <tr>
                    <td>Tag</td>
                    <td>
                        {% if bookmark.tags is not empty %}
                            <ul class="list-unstyled">
                                {% for tag in bookmark.tags %}
                                    <li class="badge bg-secondary">{{ tag.name }}</li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <span class="text-muted">Aucun tag</span>
                        {% endif %}
                    </td>
                </tr>
                </tbody>
            </table>
        {% else %}
            <p class="text-center text-muted">Aucun bookmark trouvé.</p>
        {% endif %}
        <a href="/book/mark" class="btn btn-secondary">Accueil</a>
    </div>
{% endblock %}
