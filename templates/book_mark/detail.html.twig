{% extends 'base.html.twig' %}

{% block title %}{{ 'bookmark.detail.title'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">{{ 'bookmark.detail.title'|trans }}</h1>

        {% if bookmark %}
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                <tr>
                    <th>{{ 'bookmark.detail.label'|trans }}</th>
                    <th>{{ 'bookmark.detail.value'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td><strong>{{ 'bookmark.field.url'|trans }}</strong></td>
                    <td>
                        <a href="{{ bookmark.url }}" target="_blank" class="text-primary">
                            {{ bookmark.url }}
                        </a>
                    </td>
                </tr>
                <tr>
                    <td><strong>{{ 'bookmark.field.date_creation'|trans }}</strong></td>
                    <td>{{ bookmark.dateCreation|date('d/m/Y H:i') }}</td>
                </tr>
                <tr>
                    <td><strong>{{ 'bookmark.field.commentaire'|trans }}</strong></td>
                    <td>{{ bookmark.commentaire }}</td>
                </tr>
                <tr>
                    <td>{{ 'bookmark.field.tags'|trans }}</td>
                    <td>
                        {% if bookmark.tags is not empty %}
                            <ul class="list-unstyled">
                                {% for tag in bookmark.tags %}
                                    <li class="badge bg-secondary">{{ tag.name }}</li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <span class="text-muted">{{ 'bookmark.tags.none'|trans }}</span>
                        {% endif %}
                    </td>
                </tr>
                </tbody>
            </table>
        {% else %}
            <p class="text-center text-muted">{{ 'bookmark.detail.not_found'|trans }}</p>
        {% endif %}
        <a href="/book/mark" class="btn btn-secondary">{{ 'bookmark.form.back'|trans }}</a>
    </div>
{% endblock %}
